            </animatedTile:Tile>
        </Grid>
    </DataTemplate>
    <helper:ItemTemplateSelector x:Name="ItemTemplateSelector"
                                 SimpleListTemplate="{StaticResource ListViewTemplate}"
                                 MultipleTilesTemplate="{StaticResource TileViewTemplate}"/>


</ResourceDictionary>
